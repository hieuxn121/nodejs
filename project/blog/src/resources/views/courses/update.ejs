<%- include('../includes/header.ejs') %>
</head>
<body>
    <%- include('../includes/navbar.ejs') %>
    <div class="container" style="margin-top:50px">
        <div class="row">
            <div class = "col-12">
                <form method = "POST" action = "/course/<%=course._id%>?_method=PUT">
                    <div class="form-group">
                        <label for="nameCourse">Name Course</label>
                        <input type="text" value = <%= course.name %> name ="name" class="form-control" id="nameCourse" aria-describedby="emailHelp" placeholder="Name Course">
                    </div>
                    <div class="form-group">
                        <label for="nameCourse">Level</label>
                        <input type="text" value = <%= course.level %> name ="level" class="form-control" placeholder="Name Course">
                    </div>
                    <div class="form-group">
                        <label for="des">Description</label>
                        <textarea  name ="description" class="form-control" id="des" placeholder="Description"><%= course.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="image"></label>
                        <input type="text" value = <%= course.image %> name ="image" class="form-control"  placeholder="Link Image">
                    </div>
                    <div class="form-group">
                        <label for="nameCourse">Video ID</label>
                        <input type="text" value = <%= course.videoId %> name ="videoId" class="form-control"  placeholder="Name Course">
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                    </form>
            </div>
        </div>
    </div>
<%- include('../includes/footer.ejs') %>